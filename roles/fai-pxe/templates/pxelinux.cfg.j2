default fai-generated

label fai-generated
kernel {{ vmlinuz_path }}

# generated by ansible for host {{ host }}
{% if hostname is defined %}
append initrd={{ initrd_path }} ip=dhcp  root=live:{{ fai_root_path }}  FAI_FLAGS={{ fai_flags }} FAI_CONFIG_SRC={{ fai_config_path }} FAI_ACTION=install hostname={{ hostname }}
{% else %}
append initrd={{ initrd_path }} ip=dhcp  root=live:{{ fai_root_path }}  FAI_FLAGS={{ fai_flags }} FAI_CONFIG_SRC={{ fai_config_path }} FAI_ACTION=install
{% endif %}